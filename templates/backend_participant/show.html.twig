{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>Participant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prenoms</th>
                <td>{{ participant.prenoms }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th>Club</th>
                <td>{{ participant.club }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ participant.fonction }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ participant.code }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ participant.createdAt ? participant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_participant_index') }}">back to list</a>

    <a href="{{ path('app_backend_participant_edit', {'id': participant.id}) }}">edit</a>

